    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Orca CLI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/orca_detector/cli.py",
            "console": "integratedTerminal",
            "args": [ "collect-noise", "--help"],
            "cwd": "${workspaceFolder}/orca_detector/", 
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        }
    ]
}